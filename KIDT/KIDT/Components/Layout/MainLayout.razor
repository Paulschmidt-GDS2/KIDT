@* Layout-Komponente:
  - Stellt gemeinsame Struktur (Sidebar, Header, Main & Footer) für alle Seiten bereit.
  - @Body rendert jeweils die aktive Page-Komponente
   *@

@inherits LayoutComponentBase

<div class="layout"> @* Root-Container für Layout *@
    @* CSS-Klasse für Sidebar bestimmen *@
    @{
        string sidebarClass = "sidebar "; // Basis-Klasse
        if (isCollapsed) // Ist Sidebar eingeklappt?
        {
            sidebarClass += "collapsed"; // Ja -> collapsed-Klasse
        }
        else // Nein -> Sidebar ausgeklappt
        {
            sidebarClass += "expanded"; // expanded-Klasse
        }
    }
    <div class="@sidebarClass"> @* Sidebar mit dynamischer Klasse *@
        <!-- Toggle Button -->
        <button @onclick="ToggleSidebar" title="Randleiste schließen" class="toggle-btn"> @* Schaltet Sidebar um *@
            <img src="images/sidebar.png" alt="Randleiste schließen" />
        </button>
        <a href="/Neuer Chat" title="Neuer Chat" class="nav-btn"> @* Link zu neuem Chat *@
            <img src="images/new-chat.png" alt="Neuer Chat" />
            <span>Neuer Chat</span> @* Beschriftung der Links (verschwindet bei collapsed) *@
        </a>
        <a href="/Kalender" title="Kalender" class="nav-btn"> @* Link zum Kalender *@
            <img src="images/calendar.png" alt="Kalender" />
            <span>Kalender</span>
        </a>
        <a href="/Daten"  title="Daten" class="nav-btn"> @* Link zu Daten-Seite *@
            <img src="images/data.png" alt="Daten" />
            <span>Daten</span>
        </a>
    </div>

    <div class="content"> @* Hauptinhalt rechts von Sidebar, die Content-Box*@
        <header>
            <h3>Header</h3> @* Placeholder *@
        </header>
        <main> @* Haupt-Bereich von Chat-Seite in Content-Box *@
            @Body @* Rendert die aktuell aktive Page-Komponente *@
        </main>
        <footer>
            <h3>Footer</h3> @* Placeholder *@
        </footer>
    </div>
</div>

@code {
    private bool isCollapsed = false; // Start: Sidebar breit

    private void ToggleSidebar() // Methode zum Umschalten der Sidebar
    {
        isCollapsed = !isCollapsed; // Zustand umschalten (kehrt den boolischen Wert um)
    }
}